/* component/giveReward/giveReward.wxss */
@import '../../app.wxss';
@import '../nullTip/nullTip.wxss';
.give-reward-shadow{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 10000000;
}

.give-reward-box{
    background: #fff;
    width: 580rpx;
    height: 800rpx;
    padding: 30rpx;
    position: relative;
    background-repeat: no-repeat;
    background-size: 100%;
}

.give-reward-box .top{
    border-bottom: 2rpx solid #eaeaea;
    padding-bottom: 30rpx;
}

.give-reward-box .top .head-icon{
    width: 100rpx;
    height: 100rpx;
    margin: auto;
    border-radius: 50%;
    overflow: hidden;
    background: #ddd;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.give-reward-box .top image{
    width:100%;
    height:100%;
}

.give-reward-box .top .author-name{
    font-size: 40rpx;
    color: #000;
}

.give-reward-money .tips{
    font-size: 28rpx;
    color: #333;
    margin: 30rpx 0;
}

.give-reward-money .money-btn{
    width: 160rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #333;
    border: 2rpx solid #cecece;
    margin-bottom: 30rpx;
}

.give-reward-money .money-btn.active{
    color: #fff;
    background: #A72125;
    border: 2rpx solid #A72125;
}

.give-reward-submit{
    position: absolute;
    bottom: 30rpx;
    left: 95rpx;
    width: 450rpx;    
    height: 80rpx;
    line-height: 80rpx;
    background: #A72125;
    color: #fff;
    font-size: 32rpx;
}

.close-btn{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 60rpx;
    height: 60rpx;
}

.pay-after-box{
    background: #fff;
    width: 580rpx;
}

.pay-after-title{
    width: 200rpx;
    margin: auto;
    margin-top: -60rpx;
}

.pay-after-content{
    position: relative;
    padding: 60rpx;
}

.pay-after-content .font-red-dark{
    font-size: 40rpx;
}

.pay-after-content .tips{
    margin: 20rpx 0;
    font-size: 28rpx;
    color: #000;
}

.pay-after-colse{
    width: 450rpx;    
    height: 80rpx;
    line-height: 80rpx;
    background: #A72125;
    color: #fff;
    font-size: 32rpx;
    margin:auto;
    margin-top: 60rpx;
}