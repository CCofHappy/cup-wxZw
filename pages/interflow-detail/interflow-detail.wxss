/* pages/interflow-detail/interflow-detail.wxss */
@import '../../pages/share-detail/share-detail';

.comment-wine-box{
    padding: 20rpx;
    border: 2rpx solid #efefef;
}

.comment-wine-box .image-box{
    width:200rpx;
    height:200rpx;
    margin-right: 10rpx;
    overflow: hidden;
}

.comment-wine-box .image-box image{
    width:100%;  
    height:100%;
}

.comment-wine-box .cn-name {
    font-size: 28rpx;
}

.comment-wine .comment-wine-point{
    margin: 40rpx 0;
    font-size: 36rpx;
}

.comment-wine .comment-wine-content{
    background: #f8f8f8;
    margin-bottom: 40rpx;
}

.comment-wine-content .comment-wine-title{
    line-height: 80rpx;
    height: 80rpx;
    border-bottom: 2rpx solid #EAEAEA;
    font-size: 32rpx;
    color: #656565;
    padding: 0 20rpx;
}

.comment-wine-content .comment-wine-text{
    padding: 20rpx;
    line-height: 1.5;
    font-size: 28rpx;
}

.comment-wine-content .comment-wine-title image{
    width:32rpx;
    display:block;
    margin-right: 15rpx;
}