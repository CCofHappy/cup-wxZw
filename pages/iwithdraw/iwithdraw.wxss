/* iwithdraw.wxss */
page{
  background: #efefef;
}

.form-bank{
  margin: 10rpx 0;
}

.input-box{
  padding: 0 30rpx;
  border-bottom: 2rpx solid #efefef;
}

.input-box input{
  flex: 1;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 28rpx;
}

.input-box .title{
  width: 30%;
  line-height: 80rpx;
}

.form-money{
  padding: 30rpx;
}

.form-money .input-box{
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.form-money input{
  width: 90%;
  font-size: 48rpx;
}

.form-money .title{
  width: 10%;
  line-height: 80rpx;
}

.iwithdraw-btn{
  margin: 80rpx 30rpx;
  background: #C72202;
  color: #fff;
}

.pay-password-container{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 10000;
}

.pay-password-box{
  padding: 30rpx 30rpx 0 30rpx;
  width: 480rpx;
  border-radius: 14rpx;
}

.pay-title{
  font-size: 36rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #ddd;
}

.pay-value{
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.pay-value .font-small{
  font-size: 32rpx;
}

.password-box{
  width: 100%;
  overflow: hidden;
}

.password-box .fn-float{
    width: 16.66%;
    float: left;
    box-sizing: border-box;
    border: 2rpx solid #999;
    border-right: none;
    height: 80rpx;
}

.password-box .fn-float:first-child{
  border-radius: 10rpx 0 0 10rpx;
}

.password-box .fn-float:last-child{
  border-radius: 0 10rpx 10rpx 0;
  border-right: 2rpx solid #999;
}

.pay-password-box .cancel{
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 30rpx;
  border-top: 2rpx solid #ddd;
}

.password-box .bull{
  background: #56555F;
  height: 10rpx;
  width: 10rpx;
  border-radius: 50%;
}