/* pages/search-wine/search-wine.wxss */
.search-bar{
    height: 60rpx;
    padding: 15rpx 30rpx;
    border-top: 2rpx solid #ddd;
    border-bottom: 2rpx solid #eee;
}

.search-bar input{
    background-color: #f2f2f2;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 10rpx;
    flex-grow: 1;
}

.search-bar .icon-box{
    width: 60rpx;
    height: 60rpx; 
    background-color: #f2f2f2;
    background-position: center;
    background-size: 30rpx;
    background-repeat: no-repeat;
}

.search-bar .send-btn{
    width: 80rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.search-list-box{
    padding: 0 30rpx;
    line-height: 100rpx;
    height: 100rpx;
}

.search-list-box .title{
    font-size: 28rpx;
    color: #000;
}

.search-list-box .icon-delete{
    width: 60rpx;
    height: 60rpx; 
    background-position: center;
    background-size: 40rpx;
    background-repeat: no-repeat;
}

.value-box{
    background: #f2f2f2;
    line-height: 60rpx;
    height: 60rpx;
    margin-bottom: 40rpx;
    margin-right: 40rpx;
}

.value-box navigator{
    padding: 0 40rpx;
}