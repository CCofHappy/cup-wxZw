@import '../../pages/home-auction/home-auction.wxss';
.list-item{
  border-bottom: 2rpx solid #efefef;
}
.record-box{
  padding:0 30rpx 30rpx 60rpx; 
}
.record-list{
  border-left: 2rpx solid #ddd;
  padding: 20rpx 40rpx;
  position: relative;
  color: #b6b6b6;
}
.record-list:first-child .bull{
  background: red;
}
.record-list:first-child .record-text{
  color: red;
}
.record-text view{
  line-height: 36rpx;
}
.bull{
  height: 16rpx;
  width: 16rpx;
  border-radius: 50%;
  border: 4rpx solid #ddd;
  background: #fff;
  position: absolute;
  top: 50%;
  left: -12rpx;
  margin-top: -9rpx;
}

.record-box .font-gray-lighter{
  margin: 20rpx 0 20rpx;
}

.fill-express .shadow{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 100000;
}

.fill-express-container{
  background: #e8e8e8;
  border-radius: 14rpx;
  overflow: hidden;
  width: 550rpx;
}
.fill-express-radio{
  margin-bottom: 20rpx;
}
.fill-express-btn{
  border-top: 2rpx solid #ddd;
  height: 88rpx;
  line-height: 88rpx;
}

.fill-express-btn view:last-child{
  background: #C72202;
  color: #fff;
}

.send-btn{
    color: #fff;
    display: block;
    line-height: 60rpx;
    width: 200rpx;
    height: 60rpx;
    border-radius: 10rpx;
    background: #C72202;
}
.fill-express-input{
    position: relative;
}
.scan{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 0;
    right: 56rpx;
    padding: 12rpx 0;
}