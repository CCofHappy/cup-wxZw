<!--personalInfo-nickName.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="input-box">
      <view class="input-list box name">
        <view class="input-title">昵称</view>
        <input type="text" name="customerName" placeholder="请输入您的昵称" maxlength="8" placeholder-style="font-family:'微软雅黑'" value="{{nickValue}}"/>
      </view>
    </view>
    <view class="tips">
      昵称只能为3~8个字，只允许输入数字，字母，汉字。
    </view>
    <button form-type="submit">保存</button>
  </form>
</view>
