/* register.wxss */
@import '../login/login.wxss';
page{
  position: relative;
  height: 100%;
}

.container{
  padding-top: 80px;
  height: 100%;
  box-sizing: border-box;
}

.logo{
  margin-top: 0;
}

button{
  color: #fff;
}

button:hover{
  color: #fff;
}

.areaChosePage{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: #efefef;
  z-index: 100000;
}

.code-title{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
}

.code-detail{
  padding: 0 60rpx 0 30rpx;
  justify-content: space-between;
  border-bottom:1px solid #efefef; 
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
}

.code-detail:last-child{
  border: none;
}

.headSearch{
  position: fixed;
  top: 80rpx;
  right: 0;
  background: #fff;
  text-align: center;
}

.headSearch view{
  padding: 0 4rpx;
}