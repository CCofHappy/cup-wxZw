/* auction-date.wxss */

.date-year-month {
    line-height: 80rpx;
}

.date-year-month .fn-left, .date-year-month .fn-float {
    position: absolute;
    padding: 0 20rpx;
    top: 0;
}

.date-year-month .fn-left {
    left: 60rpx;
}

.date-year-month .fn-float {
    right: 60rpx;
}

.date-title {
    border-top: 2rpx solid #efefef;
    color: #56555f;
}

.date-title, .date-content {
    overflow: hidden;
}

.date-title .fn-left {
    width: 14.28%;
    height: 60rpx;
}

.date-content {
    border-top: 2rpx solid #efefef;
}

.date-content .fn-left {
    box-sizing: border-box;
    border-right: 2rpx solid #efefef;
    border-bottom: 2rpx solid #efefef;
    font-size: 32rpx;
    width: 14.28%;
    height: 100rpx;
}

.show-date {
    color: #3bb46a;
}

.sale-date {
    color: #c72202;
}

.date-content .font-small {
    font-size: 20rpx;
    margin-top: -10rpx;
    font-weight: normal;
    height: 30rpx;
    line-height: 30rpx;
}

.date-content .fn-left .font-bold{
    width: 100%;
    height: 100%;
}
